<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.laika.application.user.domain.User" table="users">
        <composite-id name="id" class="com.laika.application.user.domain.UserId" access="field">
            <key-property column="id" name="value" length="36" access="field"/>
        </composite-id>

        <property name="username" column="username" type="string" access="field" />

    </class>
</hibernate-mapping>